{{ form_start(form) }}
    <div class="flex flex-col mt-4">
        <label for="{{ field_name(form.firstname) }}" class="font-semibold text-sm">
            {{ field_label(form.firstname) }}
        </label>
        <input
                type="text"
                id="{{ field_name(form.firstname) }}"
                name="{{ field_name(form.firstname) }}"
                value="{{ field_value(form.firstname) }}"
                placeholder="e.g. John"
                required="required"
                class="bg-zinc-50 text-zinc-800 rounded-md py-2 px-4 mt-1"
        >
    </div>

    <div class="flex flex-col mt-4">
        <label for="{{ field_name(form.lastname) }}" class="font-semibold text-sm">
            {{ field_label(form.lastname) }}
        </label>
        <input
                type="text"
                id="{{ field_name(form.lastname) }}"
                name="{{ field_name(form.lastname) }}"
                value="{{ field_value(form.lastname) }}"
                placeholder="e.g. Doe"
                required="required"
                class="bg-zinc-50 text-zinc-800 rounded-md py-2 px-4 mt-1"
        >
    </div>

    <div class="flex flex-col mt-4">
        <label for="{{ field_name(form.phone) }}" class="font-semibold text-sm">
            {{ field_label(form.phone) }}
        </label>
