                type="text"
                id="{{ field_name(form.phone) }}"
                name="{{ field_name(form.phone) }}"
                value="{{ field_value(form.phone) }}"
                placeholder="e.g. 0011223344"
                required="required"
                class="bg-zinc-50 text-zinc-800 rounded-md py-2 px-4 mt-1"
        >
    </div>

