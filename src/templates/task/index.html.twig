{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
    <div class="w-full min-h-screen flex justify-center">
        <div class="max-w-5xl w-full h-full flex flex-col text-zinc-800">

            {{ include('task/_header.html.twig') }}

            <div class="w-full flex items-center justify-between">
                <h2 class="text-2xl font-semibold">Tasks</h2>

                <div>
                    {{ include('task/_dropdown_sorting.html.twig') }}
                </div>
            </div>

            <div class="grid grid-cols-3 mt-4 gap-x-2">

                <div class="bg-zinc-50 p-2 rounded-lg">
                    <div class="flex items-center space-x-2 mb-1 mx-0.5">
                        <div class="size-2.5 rounded-full bg-zinc-500"></div>
                        <p class="font-semibold text-zinc-600">Unstarted</p>
                    </div>

                    <div class="flex flex-col space-y-2">
                        {% for task in unstartedTasks %}
                            {{ include('task/_task_card.html.twig', {'task': task}) }}
                        {% endfor %}
                    </div>
                </div>

                <div class="bg-zinc-50 p-2 rounded-lg">
                    <div class="flex items-center space-x-2 mb-1 mx-0.5">
                        <div class="size-2.5 rounded-full bg-orange-500"></div>
                        <p class="font-semibold text-zinc-600">In Progress</p>
                    </div>

                    <div class="flex flex-col space-y-2">
                        {% for task in inProgressTasks %}
                            {{ include('task/_task_card.html.twig', {'task': task}) }}
                        {% endfor %}
                    </div>
                </div>

                <div class="bg-zinc-50 p-2 rounded-lg">
                    <div class="flex items-center space-x-2 mb-1 mx-0.5">
                        <div class="size-2.5 rounded-full bg-green-500"></div>
                        <p class="font-semibold text-zinc-600">Completed</p>
                    </div>

                    <div class="flex flex-col space-y-2">
                        {% for task in completedTasks %}
                            {{ include('task/_task_card.html.twig', {'task': task}) }}
                        {% endfor %}
                    </div>
                </div>

            </div>

            {% if amount == 0 %}
                <div class="w-full p-4 bg-zinc-100 rounded-lg flex items-center text-zinc-500">
                    <i data-lucide="x" class="size-4 mr-2"></i>
                    <p>No task found. Create one!</p>
                </div>
            {% endif %}

        </div>
    </div>
{% endblock %}
