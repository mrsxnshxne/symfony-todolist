{{ form_start(form) }}
    <div class="flex flex-col mt-4">
        <label for="{{ field_name(form.name) }}" class="font-semibold text-sm">
            {{ field_label(form.name) }}
        </label>
        <input
                type="text"
                id="{{ field_name(form.name) }}"
                name="{{ field_name(form.name) }}"
                value="{{ field_value(form.name) }}"
                placeholder="e.g. John"
                required="required"
                class="bg-zinc-50 text-zinc-800 rounded-md py-2 px-4 mt-1"
        >
    </div>

    <div class="flex flex-col mt-4">
        <label for="{{ field_name(form.description) }}" class="font-semibold text-sm">
            {{ field_label(form.description) }}
        </label>
        <input
                type="text"
                id="{{ field_name(form.description) }}"
                name="{{ field_name(form.description) }}"
                value="{{ field_value(form.description) }}"
                placeholder="e.g. Doe"
                required="required"
                class="bg-zinc-50 text-zinc-800 rounded-md py-2 px-4 mt-1"
        >
    </div>

    <button class="text-sm font-semibold bg-indigo-500 text-white rounded-md py-2 px-4 inline-block mt-4 flex items-center">
        <i data-lucide="category" class="size-4 mr-2"></i>
        <p>{{ button_label|default('Save') }}</p>
    </button>
{{ form_end(form) }}